{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "required": true,
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "description": "Unique id of a thread."
    },
    "title": {
      "type": "string",
      "required": true,
      "description": "Title of the thread."
    },
    "content": {
      "type": "string",
      "required": true,
      "description": "Content of the thread."
    },
    "image": {
      "type": "string",
      "required": true,
      "description": "Thumbnail image of the thread."
    },
    "media": {
      "type": "string",
      "required": false,
      "description": "Media link for the thread, if any."
    },
    "postedDate": {
      "type": "string",
      "required": true,
      "description": "Date (in UTC) when the thread was originally posted."
    },
    "postedBy": {
      "type": "string",
      "required": true,
      "description": "Reddit user name of the original thread poster."
    },
    "replies": {
      "type": "integer",
      "required": true,
      "description": "Number of replies on this thread."
    },
    "downVotes": {
      "type": "integer",
      "required": true,
      "description": "Number of negative votes received."
    },
    "upVotes": {
      "type": "integer",
      "required": true,
      "description": "Number of positive votes received."
    }
  }
}